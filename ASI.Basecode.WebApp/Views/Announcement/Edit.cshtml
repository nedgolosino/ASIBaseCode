@model ASI.Basecode.Data.Models.Announcement

<div class="pt-5">
    <h1>Edit Announcement</h1>

    <form method="post" asp-action="Edit">
        <input type="text" value="@Model.announcementId" class="form-control d-none" asp-for="announcementId">
        <div class="form-group">
            <label>Title</label>
            <input type="text" class="form-control" asp-for="Title">
            <span asp-validation-for="Title" class="text-danger"></span>
        </div>
        <div class="form-group">
            <label>Descrption</label>
            <textarea class="form-control" rows="3" asp-for="Description"></textarea>
            <span asp-validation-for="Description" class="text-danger"></span>
        </div>
        <a asp-controller="Announcement" asp-action="Index" class="btn btn-secondary">Cancel</a>
        <button type="submit" class="btn btn-primary">Save</button>
    </form>
</div>